
- if @word.title == nil 
  %h1 Word not found
- else
  .row
    .col-lg-12
      .page-header
        %h1
          = @word.title
          %span(style="margin-left: 20px")
          %small= "[#{@word.pronounce}]"
  .row
    .col-lg-12
      .pull-right
        = form_tag("/new_words/add", method: "post") do
          = hidden_field_tag 'word_id', @word.id
          = submit_tag "ADD", class: "btn btn-primary", style: "margin-bottom: 10px; width: 200px"
  
  .panel.panel-default
    .panel-body
      - @word.translation_chinese.each do |k, v|
        %p
          %strong= k
          = v
      
  %ul.list-group
    - @word.sentences.each do |sentence|
      %li.list-group-item
        %p= sentence.english
        %p= sentence.chinese